#!/usr/bin/env sh

rofi_command="rofi -theme theme/powermenu.rasi"

### Options ###
power_off="Shutdown"
reboot="Reboot"
lock="Lock"
suspend="Sleep"
logout="Logout"
# Variable passed to rofi
options="$lock\n$logout\n$suspend\n$reboot\n$power_off"

case "$(echo -e "$options" | $rofi_command -dmenu)" in
    $power_off)
        systemctl poweroff
        ;;
    $reboot)
        systemctl reboot
        ;;
    $suspend)
        systemctl suspend
        ;;
    $logout)
        kill -s TERM $(ps -o pid,cmd ax | awk '/dwm/{ if ($2 == "dwm") print $1 }')
        ;;
    $lock)
        zzz
        ;;
esac