#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$((fd --type=directory --max-depth=1 --exclude='_*' --no-follow --full-path $HOME \
~/ \
~/Science/* \
~/Computer/* \
~/Arts_and_Entertainment/ \
~/Arts_and_Entertainment/audiovisual/; \
echo /home/inom; \
echo ~/Arts_and_Entertainment/audiovisual/anime; \
echo ~/Arts_and_Entertainment/audiovisual/audiobook/; \
echo ~/Arts_and_Entertainment/audiovisual/movie/; \
echo /mnt/share/baikal; \
echo /etc/dotfiles; \
ls -d ~/Work/*;) | fzf --tac)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name