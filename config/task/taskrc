news.version=2.6.0

# Files
data.location=~/.config/task
include ~/.config/task/serverrc
include dark-green-256.theme

# Datetime settings
weekstart=Monday

# Default project
default.project=inbox

# Estimate attribute
uda.estimate.type=numeric
uda.estimate.label=Estimate

# [Urgency](https://taskwarrior.org/docs/urgency/)
