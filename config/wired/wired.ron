(
	max_notifications: 10,
	unpause_on_input: true,
	notifications_spawn_paused: true,
	timeout: 5000,
	idle_threshold: 3600,
	poll_interval: 16,
	shortcuts: (
		notification_interact: 2,
		notification_close: 1,
		notification_closeall: 3,
	),
	history_length: 100,
	replacing_resets_timeout: true,
	min_window_width: 1024,
	layout_blocks: [
		(
			name: "root",
			parent: "",
			hook: (parent_anchor: TR, self_anchor: TR),
			offset: (x: -48, y: 48),
			params: NotificationBlock((
				monitor: 0,
				border_width: 3.0,
				border_rounding: 0.0,
				gap: (x: 0.0, y: 24.0),
				background_color: (hex: "#0e1415"),
				border_color: (hex: "#bd93f9"),
				border_color_low: (hex: "#44475a"),
				border_color_critical: (hex: "#ff5555"),
				notification_hook: (parent_anchor: BL, self_anchor: TL),
			)),
		),
		(
			name: "image",
			parent: "summary",
			hook: (parent_anchor: TL, self_anchor: TR),
			offset: (x: 0, y: 0),
			render_criteria: [ HintImage ],
			params: ImageBlock((
				image_type: Hint,
				padding: (left: 0.0, right: 24.0, top: 24.0, bottom: 24.0),
				rounding: 0.0,
				scale_width: 144,
				scale_height: 144,
				filter_mode: Lanczos3,
			)),
		),
		(
			name: "summary",
			parent: "root",
			offset: (x: 0, y: 0),
			hook: (parent_anchor: TR, self_anchor: TR),
			params: TextBlock((
				text: "%s",
				padding: (left: 18.0, right: 18.0, top: 18.0, bottom: 12.0),
				font: "Monospace 32",
				color: Color(hex: "#f8f8f2"),
				dimensions: (
					width: (min: 1024, max: 1024),
					height: (min: 0, max: 300),
				),
				dimensions_image_hint: (
					width: (min: 600, max: 600),
					height: (min: 0, max: 300),
				),
			)),
		),
		(
			name: "body",
			parent: "summary",
			offset: (x: 0, y: 0),
			hook: (parent_anchor: BL, self_anchor: TL),
			render_criteria: [ Body ],
			render_anti_criteria: [ AppName("progress") ],
			params: ScrollingTextBlock((
				text: "%b",
				padding: (left: 18.0, right: 18.0, top: 0.0, bottom: 24.0),
				font: "Monospace 32",
				color: (hex: "#f8f8f2"),
				scroll_speed: 0.1,
				lhs_dist: 24.0,
				rhs_dist: 24.0,
				scroll_t: 1.0,
				width: (min: 1024, max: 1024),
				width_image_hint: (min: 544, max: 544),
			)),
		),
		(
			name: "progress",
			parent: "body",
			offset: (x: 0, y: 0),
			hook: (parent_anchor: BL, self_anchor: TL),
			render_criteria: [ Progress ],
			render_anti_criteria: [ Body ],
			params: ProgressBlock((
				padding: (left: 22.0, right: 18.0, top: 15.0, bottom: 22.0),
				border_width: 0.0,
				border_rounding: 0.0,
				fill_rounding: 0.0,
				border_color: (hex: "#44475a"),
				background_color: (hex: "#0e1415"),
				fill_color: (hex: "#bd93f9"),
				width: 1016.0,
				height: 32.0,
			)),
		),
	],
)